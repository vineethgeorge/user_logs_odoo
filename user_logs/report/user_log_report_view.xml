<?xml version="1.0" encoding="utf-8"?>
<!--Custom report-->
<openerp>
<data>
<template id="report_users_logs_document">
        <div class="page">
        	 <h2>User Logs Details</h2>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th style="width:20%;">User Name</th>
                        <th style="width:15%;">Log-in Time</th>
                        <th style="width:15%;">Log-Out Time</th>
                        <th style="width:15%;">Ip Address</th>
                        <th style="width:15%;">Status</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="doc.user_log_ids" t-as="l">
                        <td style="width:25%;"><span t-field="l.user_id.name"/></td>
                        <td style="width:15%;"><span t-field="l.sign_in"/></td>
                        <td style="width:15%;"><span t-field="l.sign_out"/></td>
                        <td style="width:15%;"><span t-field="l.ip_address"/></td>
                        <td style="width:15%;"><span t-field="l.status"/></td>
                    </tr>
                </tbody>
            </table>
        </div>
</template>

	<template id="report_user_logs">
	    <t t-call="report.html_container">
	        <t t-foreach="docs" t-as="doc">
	            <t t-call="user_logs.report_users_logs_document" t-lang="doc.partner_id.lang"/>
	        </t>
	    </t>
	</template>
</data>
</openerp>